{
    "name":"CommentAid",
    "version": "1.1.0.1",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action":{
        "default_popup": "popup.html",
        "default_title": "CommentAid"
    },
    "permissions": [
        "tabs",
        "bookmarks",
        "unlimitedStorage",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
      }
}